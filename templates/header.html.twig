<header class="p-3 border-bottom" style="background: white;">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="{{ path('app_main') }}"
               class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                <img src="{{ asset('images/logo.png') }}" class="bi me-2" width="40" height="32" role="img"
                     aria-label="Bootstrap">
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="#" class="nav-link px-2 link-secondary disabled">{{ 'Overview'|trans }}</a></li>
                <li><a href="#" class="nav-link px-2 link-dark disabled">{{ 'Invite'|trans }}</a></li>
                <li><a href="#" class="nav-link px-2 link-dark disabled">{{ 'Collection'|trans }}</a></li>
                <li><a href="#" class="nav-link px-2 link-dark disabled">{{ 'Products'|trans }}</a></li>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                <input type="search" class="form-control" placeholder="{{ 'Search...'|trans }}" aria-label="Search" name="search">
            </form>
            <div class="dropdown text-end ms-3">
                <a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button"
                   data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.request.locale|locale_name(app.request.locale)|u.title }}
                </a>
                <ul class="dropdown-menu text-small" aria-labelledby="dropdown-language">
                    <li>
                        <a class="dropdown-item" href="{{ path('app_main', {_locale: 'en'}) }}">English</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="{{ path('app_main', {_locale: 'ru'}) }}">Русский</a>
                    </li>
                </ul>
            </div>
            {% if app.user %}
                <div class="dropdown text-end ms-3">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <span>{{ app.user.username }}</span>
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="{{ path('app_create_collection', {id: app.user.id}) }}">{{ 'New collection...'|trans }}</a></li>
                        <li><a class="dropdown-item disabled" href="#">{{ 'Settings'|trans }}</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_profile', {id: app.user.id}) }}">{{ 'Profile'|trans }}</a>
                        </li>
                        {% if app.user.roles[0] == 'ROLE_ADMIN' %}
                            <li><a class="dropdown-item" href="{{ path('admin') }}">{{ 'Admin panel'|trans }}</a></li>
                        {% endif %}
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">{{ 'Sign out'|trans }}</a></li>
                    </ul>
                </div>
            {% else %}
                <div class="text-end ms-3">
                    <a href="{{ path('app_login') }}" class="btn me-2 btn-outline-secondary">{{ 'Login'|trans }}</a>
                    <a href="{{ path('app_register') }}" class="btn btn-warning">{{ 'Sign-up'|trans }}</a>
                </div>
            {% endif %}
        </div>
    </div>
</header>