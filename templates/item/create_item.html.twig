{% extends 'base.html.twig' %}

{% block title %}Edit collection{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/collection.css') }}">
{% endblock %}
{% block body %}
    {% include 'header.html.twig' %}
    <ul class="nav nav-pills nav-justified" style="max-width: 600px; margin: 0 auto;">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ path('app_edit_collection', {id: itemCollection.id}) }}">Edit
                collection</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#">Create new item</a>
        </li>
    </ul>
    <h1>Create new item</h1>
    {{ form_start(editCollectionForm, {'attr': {'class': 'form form-main form-collection'}}) }}
    <div class="mb-3">
        {{ form_label(editCollectionForm.name) }}<br>
        {{ form_errors(editCollectionForm.name, {'attr': {'class': 'errors'}}) }}
        {{ form_widget(editCollectionForm.name, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(editCollectionForm.tags) }}<br>
        {{ form_errors(editCollectionForm.tags, {'attr': {'class': 'errors'}}) }}
        {{ form_widget(editCollectionForm.tags, {'attr': {'class': 'form-control', 'list': 'tags'}}) }}
        <datalist id="tags">
            {% for tag in tags %}
            <option value="{{ tag.name }}">
                {% endfor %}
        </datalist>
    </div>

    <input type="submit" class="btn btn-success form-control" name="submit" value="Create">
    {{ form_end(editCollectionForm) }}
{% endblock %}
